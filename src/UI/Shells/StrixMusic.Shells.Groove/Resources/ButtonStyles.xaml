<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:launchpad="using:LaunchPad.Controls"
    xmlns:default="using:StrixMusic.Sdk.Uno.Controls"
    xmlns:local="using:StrixMusic.Shells.Groove.Controls">

    <Style x:Key="MediaButton" TargetType="Button">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="1000"/>
    </Style>

    <Style x:Key="MediaToggleContentButton" TargetType="launchpad:ToggleContentButton">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="1000"/>
    </Style>
    
</ResourceDictionary>