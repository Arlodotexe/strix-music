<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shells="using:StrixMusic.Sdk.Uno.Controls.Shells"
    xmlns:pages="using:StrixMusic.Shells.Groove.Controls.Pages"
    xmlns:vmpages="using:StrixMusic.Shells.Groove.ViewModels.Pages"
    x:Class="StrixMusic.Shells.Groove.Styles.Pages.GrooveHomePageStyle">

    <DataTemplate x:Key="GrooveHomePageTemplate" x:DataType="vmpages:HomeViewViewModel">
        <shells:PlayableCollectionGroupPivot RestoreSelectedPivot="True" DataContext="{x:Bind ViewModel}">
            <shells:PlayableCollectionGroupPivot.AllEmptyContent>
                <TextBlock Text="Nothing to show!" />
            </shells:PlayableCollectionGroupPivot.AllEmptyContent>
        </shells:PlayableCollectionGroupPivot>
    </DataTemplate>

    <Style x:Key="GrooveHomePageStyle" TargetType="pages:GrooveHomePage">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="pages:GrooveHomePage">
                        <ContentControl ContentTemplate="{StaticResource GrooveHomePageTemplate}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource GrooveHomePageStyle}" TargetType="pages:GrooveHomePage"/>

</ResourceDictionary>
