<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:StrixMusic.Sdk.Uno.Converters"
    xmlns:convertvis="using:OwlCore.Uno.Converters.Bools.Visible"
    xmlns:controls="using:OwlCore.Uno.Controls"
    xmlns:abstractcontrols="using:OwlCore.Uno.AbstractUI.Controls"
    xmlns:abstractUIVm="using:OwlCore.AbstractUI.ViewModels"
    xmlns:notificationViewModels="using:StrixMusic.Sdk.ViewModels.Notifications"
    x:Class="StrixMusic.Shells.Groove.Styles.Shells.NotificationAbstractUICollectionStyle">

    <Style x:Key="GrooveNotificationAbstractUICollectionStyle" TargetType="abstractcontrols:AbstractUICollectionPresenter">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="abstractcontrols:AbstractUICollectionPresenter">
                        <ContentControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <ContentControl.ContentTemplate>
                                <DataTemplate x:DataType="notificationViewModels:AbstractUINotificationViewModel">
                                    <Grid>
                                        <StackPanel Padding="12">
                                            <TextBlock Text="{x:Bind Title}" FontSize="20" ToolTipService.ToolTip="{x:Bind TooltipText}" />

                                            <controls:MarqueeTextBlock Text="{x:Bind Subtitle}" FontSize="12" FontWeight="SemiLight" Opacity="0.5" IsRepeating="False"
                                                                  IsAbsoluteSpeed="True" AbsoluteSpeed="48" Visibility="{x:Bind convertvis:NotNullOrEmptyToVisibilityConverter.Convert(Subtitle)}"
                                                                  TextMarginLeft="12" PointerEntered="MarqueeTextControl_PointerEntered"/>

                                            <!--<ItemsControl ItemsSource="{x:Bind Items}"
                                                          Margin="0,8,0,0"
                                                          ItemTemplateSelector="{StaticResource CollectionTemplateSelector}" />-->

                                            <ItemsControl ItemsSource="{x:Bind Buttons}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="abstractUIVm:AbstractButtonViewModel">
                                                        <abstractcontrols:AbstractButtonPresenter Margin="8,0"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="-4,0"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>

                                        <ProgressBar Value="{x:Bind ProgressIndicator.Value, Mode=OneWay}"
                                                     Minimum="{x:Bind ProgressIndicator.Minimum, Mode=OneWay}"
                                                     Maximum="{x:Bind ProgressIndicator.Maximum, Mode=OneWay}"
                                                     IsIndeterminate="{x:Bind ProgressIndicator.IsIndeterminate, Mode=OneWay}"
                                                     Visibility="{x:Bind convertvis:NotNullToVisibilityConverter.Convert(ProgressIndicator)}"
                                                     VerticalAlignment="Bottom"
                                                     Foreground="White"
                                                     Margin="0,0,-56,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>
