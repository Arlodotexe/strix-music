<ResourceDictionary
    x:Class="StrixMusic.Shells.ZuneDesktop.Styles.NowPlayingViewStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shells.ZuneDesktop.Controls"
    xmlns:defaultcontrols="using:StrixMusic.Sdk.Uno.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:launchpad="using:LaunchPad.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///StrixMusic.Shells.ZuneDesktop/Resources/Brushes.xaml"/>
        <ResourceDictionary Source="ms-appx:///StrixMusic.Shells.ZuneDesktop/Resources/ButtonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ZuneNowPlayingViewStyle" TargetType="defaultcontrols:NowPlayingView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="defaultcontrols:NowPlayingView">
                        <Grid>
                            <local:AlbumWall HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                            <!--Back Button-->
                            <Button Style="{StaticResource ZuneButton}" Width="32" Margin="20,-16,0,0"
                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                Click="GoBack">
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                                </Button.RenderTransform>
                                <FontIcon Glyph="&#xE0A6;" FontSize="16" FontWeight="Black"/>
                            </Button>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneNowPlayingViewStyle}" TargetType="defaultcontrols:NowPlayingView"/>

</ResourceDictionary>
