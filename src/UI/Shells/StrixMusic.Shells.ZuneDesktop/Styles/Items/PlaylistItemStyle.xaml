<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:items="using:StrixMusic.Sdk.Uno.Controls.Items"
    xmlns:viewModels="using:StrixMusic.Sdk.ViewModels"
    x:Class="StrixMusic.Shells.ZuneDesktop.Styles.Items.PlaylistItemStyle">

    <DataTemplate x:Key="ZuneDesktopPlaylistTemplate" x:DataType="viewModels:PlaylistViewModel">
        <Grid Background="Transparent" Margin="-24,0" Padding="24,0">
            <TextBlock Text="{x:Bind Name}" FontSize="12" FontWeight="SemiBold" Opacity=".8"
                   VerticalAlignment="Center"/>
        </Grid>
    </DataTemplate>

    <Style x:Key="ZuneDesktopPlaylistControlStyle" TargetType="items:PlaylistItem">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="items:PlaylistItem">
                        <ContentControl ContentTemplate="{StaticResource ZuneDesktopPlaylistTemplate}"
                                        VerticalContentAlignment="Stretch" VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneDesktopPlaylistControlStyle}" TargetType="items:PlaylistItem"/>

</ResourceDictionary>