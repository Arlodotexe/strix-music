<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:defaultcontrols="using:StrixMusic.Sdk.Uno.Controls"
    xmlns:converters="using:StrixMusic.Sdk.Uno.Converters"
    xmlns:viewModels="clr-namespace:StrixMusic.Sdk.ViewModels;assembly=StrixMusic.Sdk"
    x:Class="StrixMusic.Shells.ZuneDesktop.Styles.ArtistItemStyle">

    <DataTemplate x:Key="ZuneDesktopArtistItemDataTemplate" x:DataType="viewModels:ArtistViewModel">
        <TextBlock Text="{x:Bind Name}" FontSize="12" FontWeight="SemiBold" Opacity=".8"/>
    </DataTemplate>

    <Style x:Key="ZuneDesktopArtistItemStyle" TargetType="defaultcontrols:ArtistItem">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="defaultcontrols:ArtistItem">
                        <ContentControl ContentTemplate="{StaticResource ZuneDesktopArtistItemDataTemplate}"
                                        HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneDesktopArtistItemStyle}" TargetType="defaultcontrols:ArtistItem"/>

</ResourceDictionary>