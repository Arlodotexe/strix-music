<UserControl
    x:Class="StrixMusic.Shells.ZuneDesktop.Controls.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shells.ZuneDesktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:StrixMusic.Shells.ZuneDesktop.Controls.SettingsPages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Header-->
        <TextBlock Text="settings" FontSize="24" FontWeight="Light" Margin="44,36,44,0"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="4" Margin="42,0,0,36" HorizontalAlignment="Left" VerticalAlignment="Top">
                <RadioButton Content="DISPLAY" Style="{StaticResource SmallZuneMockPivotItemRadioButtonStyle}" Click="NavigateToDisplay"
                             IsChecked="True"/>
                <RadioButton Content="BEHAVIOR" Style="{StaticResource SmallZuneMockPivotItemRadioButtonStyle}" Click="NavigateToBehavior"/>
                <RadioButton Content="CORES" Style="{StaticResource SmallZuneMockPivotItemRadioButtonStyle}" Click="NavigateToBehavior"/>
            </StackPanel>

            <ListView x:Name="PagesList" ItemContainerStyle="{StaticResource ZuneSettingsListViewItem}" Grid.Row="1" Grid.Column="1" Padding="24,0,96,0"
                      ItemsSource="{x:Bind _displayPages}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel x:Name="PageListItemPanel">
                            <ItemsStackPanel.ChildrenTransitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromHorizontalOffset="-20" FromVerticalOffset="0" IsStaggeringEnabled="True"/>
                                </TransitionCollection>
                            </ItemsStackPanel.ChildrenTransitions>
                        </ItemsStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

            <Rectangle Width="1" Grid.Row="1" Grid.Column="2" Fill="Black" Opacity=".2"/>

            <ContentControl Grid.Row="1" Grid.Column="3" Padding="40,0">
                <ContentControl.Content>
                    <pages:SettingsBackgrounds/>
                </ContentControl.Content>
            </ContentControl>
        </Grid>

        <!--Action Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="48,32" Grid.Row="2">
            <Button Content="OK" Margin="2,0" Style="{StaticResource ZuneTextButton}" Click="SaveClicked"/>
            <Button Content="CANCEL" Style="{StaticResource ZuneTextButton}" Margin="2,0,0,0" Click="CancelClicked"/>
        </StackPanel>
    </Grid>
</UserControl>
