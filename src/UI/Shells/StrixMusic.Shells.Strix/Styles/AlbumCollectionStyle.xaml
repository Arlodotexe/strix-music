<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:StrixMusic.Sdk.Core.ViewModels"
    xmlns:defaultcontrols="using:StrixMusic.Sdk.Uno.Controls"
    x:Class="StrixMusic.Shells.Strix.Styles.AlbumCollectionStyle">

    <DataTemplate x:Key="StrixAlbumCollectionContentTemplate" x:DataType="viewModels:IAlbumCollectionViewModel">
        <GridView ItemsSource="{x:Bind Albums}" ItemTemplate="{StaticResource StrixAlbumCollectionItemStyle}"
                  Padding="16" HorizontalAlignment="Stretch"  SelectionMode="None" IsItemClickEnabled="True"
                  ItemClick="OpenAlbum"/>
    </DataTemplate>

    <DataTemplate x:Key="StrixAlbumCollectionItemStyle">
        <defaultcontrols:AlbumItem />
    </DataTemplate>

    <Style x:Key="StrixAlbumCollectionStyle" TargetType="defaultcontrols:AlbumCollection">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="defaultcontrols:AlbumCollection">
                        <ContentControl ContentTemplate="{StaticResource StrixAlbumCollectionContentTemplate}"
                                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource StrixAlbumCollectionStyle}" TargetType="defaultcontrols:AlbumCollection"/>

</ResourceDictionary>