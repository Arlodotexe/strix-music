    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="MainPage_SizeChanged">

    <Grid>
        <Grid x:Name="PART_MediaPlayerElements" Visibility="Collapsed" />

        <ContentPresenter x:Name="ShellDisplay"/>

        <Button Click="Button_Click" Content="&#xF246;" FontFamily="Segoe MDL2 Assets" FontSize="22"
