<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shells.ZuneDesktop.Controls"
    xmlns:shellcontrols="using:StrixMusic.Shells.Controls"
    xmlns:observables="using:StrixMusic.Sdk.Observables"
    xmlns:interfaces="using:StrixMusic.Sdk.Interfaces"
    xmlns:selectors="using:StrixMusic.Shells.ZuneDesktop.TemplateSelectors"
    x:Class="StrixMusic.Shells.ZuneDesktop.Styles.SettingsViewStyle">
    
    <Style x:Key="ZuneDesktopSettingsViewStyle" TargetType="shellcontrols:SettingsView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shellcontrols:SettingsView">
                        <local:SettingsView/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneDesktopSettingsViewStyle}" TargetType="shellcontrols:SettingsView"/>

</ResourceDictionary>
