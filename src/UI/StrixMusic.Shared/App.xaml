<Application
    x:Class="Strix_Music.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music"
    xmlns:shared="using:StrixMusic.Shared">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///StrixMusic.Shell.Default/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="ShadowColor">#FF000000</Color>
            <x:Double x:Key="ShadowOpacity">0.1</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
