<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music.DefaultShell.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Themes/AlbumStyle.xaml"/>
        <ResourceDictionary Source="Themes/AlbumViewStyle.xaml"/>
        <ResourceDictionary Source="Themes/ArtistStyle.xaml"/>
        <ResourceDictionary Source="Themes/ArtistViewStyle.xaml"/>
        <ResourceDictionary Source="Themes/NowPlayingBarStyle.xaml"/>
        <ResourceDictionary Source="Themes/PlayableCollectionListStyle.xaml"/>
        <ResourceDictionary Source="Themes/ShellStyle.xaml"/>
        <ResourceDictionary Source="Themes/TrackListStyle.xaml"/>
        <ResourceDictionary Source="Themes/TrackStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="QuickActionButton" TargetType="Button">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="MediaButton" TargetType="Button">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="PlayableCollectionGridItemStyle" TargetType="GridViewItem">
        <Setter Property="Margin" Value="8,12"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
    </Style>

    <Style x:Key="TrackListItemStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>
    
</ResourceDictionary>