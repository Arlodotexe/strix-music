<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music.DefaultShell.Controls">

    <Style x:Key="DefaultAlbumControlStyle" TargetType="local:AlbumControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:AlbumControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Fill="#FF00FF" Width="128" Height="128"/>
                            <StackPanel Grid.Row="1" Margin="0,8,0,0">
                                <TextBlock Text="Contra" FontWeight="SemiBold"/>
                                <TextBlock Text="Vampire Weekend" Opacity=".5"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultAlbumControlStyle}" TargetType="local:AlbumControl"/>

</ResourceDictionary>