<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music.DefaultShell.Controls">

    <Style x:Key="DefaultPlayableCollectionListControlStyle" TargetType="local:PlayableCollectionListControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:PlayableCollectionListControl">
                        <GridView Padding="16" ItemContainerStyle="{StaticResource PlayableCollectionGridItemStyle}">
                            <GridView.Items>
                                <GridViewItem Background="#FF0000">
                                </GridViewItem>
                                <GridViewItem Background="#00FF00">
                                </GridViewItem>
                                <GridViewItem Background="#0000FF">
                                </GridViewItem>
                            </GridView.Items>
                        </GridView>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultPlayableCollectionListControlStyle}" TargetType="local:PlayableCollectionListControl"/>

</ResourceDictionary>