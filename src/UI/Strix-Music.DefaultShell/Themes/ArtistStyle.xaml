<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music.Shell.Default.Controls">

    <Style x:Key="DefaultArtistControlStyle" TargetType="local:ArtistControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ArtistControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Fill="#FF00FF" Width="128" Height="128" RadiusX="64" RadiusY="64"/>
                            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                <TextBlock Text="Vampire Weekend" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultArtistControlStyle}" TargetType="local:ArtistControl"/>

</ResourceDictionary>