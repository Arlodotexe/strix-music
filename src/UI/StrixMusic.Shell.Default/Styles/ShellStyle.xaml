<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:root="using:StrixMusic.Shell.Default"
    x:Class="StrixMusic.Shell.Default.Styles.ShellStyle">

    <Style x:Key="DefaultShellContainerStyle" TargetType="local:ShellContainer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ShellContainer">
                        <root:DefaultShell/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultShellContainerStyle}" TargetType="local:ShellContainer"/>

</ResourceDictionary>