<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:sdk="using:StrixMusic.Sdk"
    xmlns:observables="using:StrixMusic.Sdk.Observables"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    xmlns:controls="using:StrixMusic.Shell.Default.Controls"
    x:Class="StrixMusic.Shell.Default.Styles.HomeStyle">

    <DataTemplate x:Key="DefaultHomeTemplate" x:DataType="sdk:MainViewModel">
        <UserControl>
            <controls:PlayableCollectionGroupPivot DataContext="{x:Bind Library}" RestoreSelectedPivot="True">
                <controls:PlayableCollectionGroupPivot.AllEmptyContent>
                    <TextBlock Text="Nothing to show!" />
                </controls:PlayableCollectionGroupPivot.AllEmptyContent>
            </controls:PlayableCollectionGroupPivot>
        </UserControl>
    </DataTemplate>

    <Style x:Key="DefaultHomeViewStyle" TargetType="local:HomeView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:HomeView">
                        <ContentControl ContentTemplate="{StaticResource DefaultHomeTemplate}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultHomeViewStyle}" TargetType="local:HomeView"/>

</ResourceDictionary>