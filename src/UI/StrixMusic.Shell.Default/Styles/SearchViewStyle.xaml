<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:converters="using:StrixMusic.Shell.Default.Converters"
    xmlns:sdk="using:StrixMusic.Sdk"
    x:Class="StrixMusic.Shell.Default.Styles.SearchViewStyle">

    <DataTemplate x:Key="DefaultSearchViewTemplate" x:DataType="sdk:MainViewModel">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search results for &quot;"/>
            <TextBlock Text="{x:Bind SearchResults.Name, Mode=OneWay}"/>
            <TextBlock Text="&quot;"/>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="DefaultSearchViewStyle" TargetType="local:SearchView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:SearchView">
                        <ContentControl ContentTemplate="{StaticResource DefaultSearchViewTemplate}"
                                        HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultSearchViewStyle}" TargetType="local:SearchView"/>

</ResourceDictionary>