<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;xamarinios10;xamarinmac20;MonoAndroid90;monoandroid10.0;uap10.0.16299</TargetFrameworks>
    <!-- Ensures the .xr.xml files are generated in a proper layout folder -->
    <GenerateLibraryLayout>true</GenerateLibraryLayout>
    <AssemblyName>Strix_Music.Shell.Default</AssemblyName>
    <RootNamespace>Strix_Music.Shell.Default</RootNamespace>
    <Nullable>enable</Nullable>
    <LangVersion>8.0</LangVersion>
    <WarningsAsErrors>nullable</WarningsAsErrors>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <DefineConstants>$(DefineConstants);__WASM__</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Uno.UI" Version="3.0.0-dev.1253" />
  </ItemGroup>
  <ItemGroup>
    <Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Resources.xaml" />
    <None Remove="Themes\AlbumStyle.xaml" />
    <None Remove="Themes\AlbumViewStyle.xaml" />
    <None Remove="Themes\ArtistStyle.xaml" />
    <None Remove="Themes\ArtistViewStyle.xaml" />
    <None Remove="Themes\HomeStyle.xaml" />
    <None Remove="Themes\NowPlayingBarControl.xaml" />
    <None Remove="Themes\PlayableCollectionListStyle.xaml" />
    <None Remove="Themes\ShellStyle.xaml" />
    <None Remove="Themes\TrackListStyle.xaml" />
    <None Remove="Themes\TrackStyle.xaml" />
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Remove="Resources.xaml" />
    <UpToDateCheckInput Remove="Themes\AlbumStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\AlbumViewStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\ArtistStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\ArtistViewStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\HomeStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\NowPlayingBarControl.xaml" />
    <UpToDateCheckInput Remove="Themes\PlayableCollectionListStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\ShellStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\TrackListStyle.xaml" />
    <UpToDateCheckInput Remove="Themes\TrackStyle.xaml" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Infrastructure\StrixMusic.CoreInterfaces\StrixMusic.CoreInterfaces.csproj" />
    <ProjectReference Include="..\..\Infrastructure\StrixMusix.ViewModels\StrixMusic.ViewModels.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Themes\HomeStyle.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="Themes\TrackStyle.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="Themes\TrackListStyle.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Themes\NowPlayingBarControl.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <Generator>XamlIntelliSenseFileGenerator</Generator>
    </Page>
  </ItemGroup>
</Project>