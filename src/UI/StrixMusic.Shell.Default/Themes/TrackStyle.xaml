<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:observable="using:StrixMusic.Sdk.Observables"
    x:Class="StrixMusic.Shell.Default.Themes.TrackStyle">

    <DataTemplate x:Key="DefaultTrackTemplate" x:DataType="observable:ObservableTrack">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{x:Bind TrackNumber}" Margin="16,0"/> <!--Track Number-->
            <TextBlock Text="{x:Bind Name}" Grid.Column="1"/>
            <TextBlock Grid.Column="2"/>
            <TextBlock Text="{x:Bind Album.Name}" Grid.Column="3"/>
            <TextBlock Text="{x:Bind Album.DatePublished}" Margin="16,0" Grid.Column="4"/> <!--Year-->
            <TextBlock Text="{x:Bind Duration}" Margin="16,0" Grid.Column="5"/> <!--Duration-->
        </Grid>
    </DataTemplate>
    
    <Style x:Key="DefaultTrackControlStyle" TargetType="local:TrackControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:TrackControl">
                        <ContentControl ContentTemplate="{StaticResource DefaultTrackTemplate}"
                                        HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultTrackControlStyle}" TargetType="local:TrackControl"/>

</ResourceDictionary>