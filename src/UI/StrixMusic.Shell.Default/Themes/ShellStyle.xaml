<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:Quarrel.Xaml.Behaviors"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    xmlns:viewmodels="using:StrixMusic.ViewModels"
    xmlns:internal="using:StrixMusic.Shell.Default.Controls.Internal"
    x:Class="StrixMusic.Shell.Default.Themes.ShellStyle">

    <Style x:Key="DefaultShellContainerStyle" TargetType="local:ShellContainer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ShellContainer">
                        <internal:Shell/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultShellContainerStyle}" TargetType="local:ShellContainer"/>

</ResourceDictionary>