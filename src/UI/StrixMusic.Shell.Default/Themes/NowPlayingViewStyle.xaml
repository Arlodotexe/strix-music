<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    xmlns:controls="using:StrixMusic.Shell.Default.Controls"
    x:Class="StrixMusic.Shell.Default.Themes.NowPlayingViewStyle">

    <DataTemplate x:Key="DefaultNowPlayingViewTemplate">
        <UserControl>
            <Grid Background="Black">
                <Rectangle Width="100" Height="100"/>
            </Grid>
        </UserControl>
    </DataTemplate>

    <Style x:Key="DefaultNowPlayingViewStyle" TargetType="controls:NowPlayingViewControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:NowPlayingViewControl">
                        <ContentControl ContentTemplate="{StaticResource DefaultNowPlayingViewTemplate}"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultNowPlayingViewStyle}" TargetType="controls:NowPlayingViewControl"/>

</ResourceDictionary>
