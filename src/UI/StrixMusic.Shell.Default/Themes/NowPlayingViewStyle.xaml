<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Shell.Default.Controls"
    xmlns:observables="using:StrixMusic.ViewModels.Bindables"
    xmlns:interfaces="using:StrixMusic.CoreInterfaces.Interfaces"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    x:Class="StrixMusic.Shell.Default.Themes.NowPlayingViewStyle">

    <DataTemplate x:Key="DefaultNowPlayingViewTemplate">
        <UserControl>
            <Grid>
                
            </Grid>
        </UserControl>
    </DataTemplate>

    <Style x:Key="DefaultNowPlayingViewStyle" TargetType="local:NowPlayingViewControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:NowPlayingViewControl">
                        <ContentControl ContentTemplate="{StaticResource DefaultNowPlayingViewTemplate}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultNowPlayingViewStyle}" TargetType="local:NowPlayingViewControl"/>

</ResourceDictionary>
