<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shellcontrols="using:StrixMusic.Shells.Controls"
    xmlns:sdk="using:StrixMusic.Sdk"
    xmlns:selectors="using:StrixMusic.Shells.Default.TemplateSelectors"
    x:Class="StrixMusic.Shells.Default.Styles.HomeStyle">

    <DataTemplate x:Key="DefaultHomeTemplate" x:DataType="sdk:MainViewModel">
        <UserControl>
            <shellcontrols:PlayableCollectionGroupPivot DataContext="{x:Bind Library}" RestoreSelectedPivot="True">
                <shellcontrols:PlayableCollectionGroupPivot.AllEmptyContent>
                    <TextBlock Text="Nothing to show!" />
                </shellcontrols:PlayableCollectionGroupPivot.AllEmptyContent>
            </shellcontrols:PlayableCollectionGroupPivot>
        </UserControl>
    </DataTemplate>

    <Style x:Key="DefaultHomeViewStyle" TargetType="shellcontrols:HomeView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shellcontrols:HomeView">
                        <ContentControl ContentTemplate="{StaticResource DefaultHomeTemplate}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultHomeViewStyle}" TargetType="shellcontrols:HomeView"/>

</ResourceDictionary>
