<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:default="using:StrixMusic.Shell.Default.Controls"
    xmlns:local="using:StrixMusic.Shell.Strix.Controls"
    xmlns:viewmodels="using:StrixMusic.ViewModels"
    x:Class="StrixMusic.Shell.Strix.Themes.ShellStyle">

    <Style x:Key="StrixShellContainerStyle" TargetType="default:ShellContainer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="default:ShellContainer">
                        <local:Shell/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource StrixShellContainerStyle}" TargetType="default:ShellContainer"/>

</ResourceDictionary>