<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:default="using:StrixMusic.Shell.Default.Controls"
    xmlns:sdk="using:StrixMusic.Sdk"
    xmlns:local="using:StrixMusic.Shell.Strix.Controls"
    xmlns:observables="using:StrixMusic.Sdk.Observables"
    xmlns:interfaces="using:StrixMusic.Sdk.Interfaces"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    x:Class="StrixMusic.Shell.Strix.Themes.HomeStyle">

    <DataTemplate x:Key="StrixHomeTemplate" x:DataType="sdk:MainViewModel">
        <UserControl>
            <Grid>
                <Pivot>
                    <Pivot.LeftHeader>
                        <TextBlock Grid.Column="1" Text="Library" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Margin="16,0"/>
                    </Pivot.LeftHeader>
                    <PivotItem Header="Overview">
                    </PivotItem>
                    <PivotItem Header="Tracks">
                        <default:TrackListControl Tracks="{x:Bind Library.Tracks, Mode=OneWay}" PopulateMoreTracksCommand="{x:Bind Library.PopulateMoreTracksCommand}"/>
                    </PivotItem>
                    <PivotItem Header="Albums">
                        <default:PlayableCollectionListControl Collections="{x:Bind Library.Albums, Mode=OneWay}" PopulateMoreCollectionsCommand="{x:Bind Library.PopulateMoreAlbumsCommand}" />
                    </PivotItem>
                    <PivotItem Header="Artists">
                    </PivotItem>
                    <PivotItem Header="Playlists">
                    </PivotItem>
                </Pivot>
            </Grid>
        </UserControl>
    </DataTemplate>

    <Style x:Key="StrixHomeViewControlStyle" TargetType="default:HomeControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="default:HomeControl">
                        <ContentControl ContentTemplate="{StaticResource StrixHomeTemplate}"
                                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource StrixHomeViewControlStyle}" TargetType="default:HomeControl"/>

</ResourceDictionary>