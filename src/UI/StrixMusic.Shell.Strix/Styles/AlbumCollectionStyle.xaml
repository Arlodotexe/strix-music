<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shellcontrols="using:StrixMusic.Shells.Controls"
    xmlns:observables="using:StrixMusic.Sdk.Observables"
    xmlns:selectors="using:StrixMusic.Shell.Default.TemplateSelectors"
    x:Class="StrixMusic.Shell.Strix.Styles.AlbumCollectionStyle">

    <DataTemplate x:Key="StrixAlbumCollectionContentTemplate" x:DataType="observables:IObservableAlbumCollection">
        <GridView ItemsSource="{x:Bind Albums}" ItemTemplate="{StaticResource StrixAlbumCollectionItemStyle}"
                  Padding="16" HorizontalAlignment="Stretch"  SelectionMode="None" IsItemClickEnabled="True"
                  ItemClick="OpenAlbum"/>
    </DataTemplate>

    <DataTemplate x:Key="StrixAlbumCollectionItemStyle">
        <shellcontrols:AlbumItem />
    </DataTemplate>

    <Style x:Key="StrixAlbumCollectionStyle" TargetType="shellcontrols:AlbumCollection">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shellcontrols:AlbumCollection">
                        <ContentControl ContentTemplate="{StaticResource StrixAlbumCollectionContentTemplate}"
                                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource StrixAlbumCollectionStyle}" TargetType="shellcontrols:AlbumCollection"/>

</ResourceDictionary>