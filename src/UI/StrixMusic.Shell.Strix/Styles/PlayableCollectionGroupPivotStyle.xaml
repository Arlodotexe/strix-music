<ResourceDictionary
    x:Class="StrixMusic.Shell.Strix.Styles.PlayableCollectionGroupPivotStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shellcontrols="using:StrixMusic.Shells.Controls"
    xmlns:local="clr-namespace:StrixMusic.Shell.Strix.Styles">

    <Style BasedOn="{StaticResource DefaultPlayableCollectionGroupPivotStyle}" TargetType="shellcontrols:PlayableCollectionGroupPivot">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shellcontrols:PlayableCollectionGroupPivot">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <Pivot x:Name="PART_Pivot">
                                    <Pivot.LeftHeader>
                                        <TextBlock Grid.Column="1" Text="Library" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Margin="16,0"/>
                                    </Pivot.LeftHeader>
                                    <PivotItem x:Name="PART_OverviewPivotItem" Header="Overview">

                                    </PivotItem>
                                    <PivotItem x:Name="PART_SongsPivotItem" Header="Songs">
                                        <shellcontrols:TrackCollection />
                                    </PivotItem>
                                    <PivotItem x:Name="PART_AlbumsPivotItem" Header="Albums">
                                        <shellcontrols:AlbumCollection />
                                    </PivotItem>
                                    <PivotItem x:Name="PART_ArtistsPivotItem" Header="Artists">
                                        <shellcontrols:ArtistCollection />
                                    </PivotItem>
                                    <PivotItem x:Name="PART_PlaylistsPivotItem" Header="Playlists">

                                    </PivotItem>
                                </Pivot>

                                <ContentPresenter x:Name="PART_AllEmptyContentPresenter" Visibility="Collapsed" />

                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>
