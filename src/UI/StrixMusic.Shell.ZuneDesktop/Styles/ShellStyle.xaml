<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:default="using:StrixMusic.Shell.Default.Controls"
    xmlns:controls="using:StrixMusic.Shell.ZuneDesktop.Controls"
    xmlns:sdk="using:StrixMusic.Sdk"
    x:Class="StrixMusic.Shell.ZuneDesktop.Styles.ShellStyle">

    <DataTemplate x:Key="ZuneShellTemplate" x:DataType="sdk:MainViewModel">
        <controls:ZuneShell/>
    </DataTemplate>

    <Style x:Key="ZuneShellContainerStyle" TargetType="default:ShellContainer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="default:ShellContainer">
                        <ContentControl ContentTemplate="{StaticResource ZuneShellTemplate}"
                                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneShellContainerStyle}" TargetType="default:ShellContainer"/>

</ResourceDictionary>