<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:default="using:StrixMusic.Shell.Default.Controls"
    xmlns:controls="using:StrixMusic.Shell.ZuneDesktop.Controls"
    xmlns:viewmodels="using:StrixMusic.ViewModels"
    xmlns:converters="using:LaunchPad.Converters"
    x:Class="StrixMusic.Shell.ZuneDesktop.Themes.ShellStyle">

    <DataTemplate x:Key="ZuneShellTemplate" x:DataType="viewmodels:MainViewModel">
        <controls:ZuneShell/>
    </DataTemplate>
    
    <Style x:Key="ZuneShellControlStyle" TargetType="default:ShellControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="default:ShellControl">
                        <ContentControl ContentTemplate="{StaticResource ZuneShellTemplate}"
                                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneShellControlStyle}" TargetType="default:ShellControl"/>

</ResourceDictionary>