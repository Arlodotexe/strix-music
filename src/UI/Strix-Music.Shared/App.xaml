<Application
    x:Class="Strix_Music.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music"
    xmlns:services="using:StrixMusic.Services">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Strix_Music.Shell.Default/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="ShadowColor">#FF000000</Color>
            <x:Double x:Key="ShadowOpacity">0.1</x:Double>
            <services:ViewModelLocator x:Key="ViewModelLocator" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
