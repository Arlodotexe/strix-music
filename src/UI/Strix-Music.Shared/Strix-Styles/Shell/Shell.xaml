<UserControl
    x:Class="Strix_Music.Shared.Strix_Style.Shell.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strix_Music.Shared.Strix_Style.Shell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <local:Drawer>
            <local:Drawer.TopBarContent>
                <Rectangle Fill="#FFFF00" Height="96"/>
            </local:Drawer.TopBarContent>
            <local:Drawer.BottomBarContent>
                <Rectangle Fill="#FF0000"/>
            </local:Drawer.BottomBarContent>
            <local:Drawer.BottomBarSecondaryContent>
                <Rectangle Fill="#FF00FF" Height="96"/>
            </local:Drawer.BottomBarSecondaryContent>
            <local:Drawer.PanelContent>
                <Rectangle Fill="#00FF00"/>
            </local:Drawer.PanelContent>
            <local:Drawer.MainContent>
                <Rectangle Fill="#0000FF"/>
            </local:Drawer.MainContent>
        </local:Drawer>
    </Grid>
</UserControl>
