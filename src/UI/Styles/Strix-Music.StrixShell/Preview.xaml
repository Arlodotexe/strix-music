<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:default="using:Strix_Music.Shell.Default.Controls"
    xmlns:local="using:Strix_Music.Shell.Strix.Controls">

    <Style x:Key="StrixShellPreviewStyle" TargetType="default:PreviewControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="default:PreviewControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="48"/>
                            </Grid.RowDefinitions>

                            <Grid Background="#302e38"/>
                            <Grid Grid.Row="1" Background="#24222a">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="64"/>
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="64"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Fill="#FFFFFF" Opacity=".3" Margin="8"/>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,8">
                                        <Rectangle Fill="White" Height="8" RadiusX="4" RadiusY="4" Width="64"/>
                                        <Rectangle Fill="White" Opacity=".5" Height="8" RadiusX="4" RadiusY="4" Width="32" HorizontalAlignment="Left" Margin="0,4"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2" Margin="8">
                                        <Rectangle Fill="#FFFFFF" Opacity=".5" Width="16" Height="16" RadiusX="8" RadiusY="8" Margin="4,0"/>
                                        <Rectangle Fill="#FFFFFF" Opacity=".8" Width="16" Height="16" RadiusX="8" RadiusY="8" Margin="4,0"/>
                                        <Rectangle Fill="#FFFFFF" Opacity=".5" Width="16" Height="16" RadiusX="8" RadiusY="8" Margin="4,0"/>
                                        <Rectangle Fill="#FFFFFF" Opacity=".5" Width="16" Height="16" RadiusX="8" RadiusY="8" Margin="4,0"/>
                                        <Rectangle Fill="#FFFFFF" Opacity=".5" Width="16" Height="16" RadiusX="8" RadiusY="8" Margin="4,0"/>
                                    </StackPanel>
                                </Grid>
                                <Rectangle Fill="{StaticResource SystemAccentColor}" Grid.Row="1" Height="8" RadiusX="4" RadiusY="4" Margin="16,0"/>
                            </Grid>
                            <Grid Grid.Row="2" Background="#18171c">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="#FFFFFF" Width="8" Height="8"
                                           RadiusX="4" RadiusY="4" Grid.Column="0"/>
                                <Rectangle Fill="#FFFFFF" Width="8" Height="8"
                                           RadiusX="4" RadiusY="4" Grid.Column="1"/>
                                <Rectangle Fill="#FFFFFF" Width="8" Height="8"
                                           RadiusX="4" RadiusY="4" Grid.Column="2"/>
                                <Rectangle Fill="#FFFFFF" Width="8" Height="8"
                                           RadiusX="4" RadiusY="4" Grid.Column="3"/>
                                <Rectangle Fill="#FFFFFF" Width="8" Height="8"
                                           RadiusX="4" RadiusY="4" Grid.Column="4"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>