    <Style x:Key="GenericBarButton" TargetType="Button">
        <Style.Setters>
            <Setter Target="Background" Value="Transparent"/>
            <Setter Target="BorderThickness" Value="1"/>
            <Setter Target="HorizontalAlignment" Value="Stretch"/>
            <Setter Target="VerticalAlignment" Value="Stretch"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="TopBarButton" TargetType="Button">
        <Style.Setters>
            <Setter Target="Background" Value="Transparent"/>
            <Setter Target="BorderThickness" Value="1"/>
            <Setter Target="HorizontalAlignment" Value="Stretch"/>
            <Setter Target="VerticalAlignment" Value="Stretch"/>
            <Setter Target="Width" Value="150"/>
        </Style.Setters>
    </Style>
