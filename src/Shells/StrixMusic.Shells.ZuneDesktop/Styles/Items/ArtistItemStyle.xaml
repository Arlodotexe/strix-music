<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:items="using:StrixMusic.Sdk.WinUI.Controls.Items"
    xmlns:converters="using:StrixMusic.Sdk.WinUI.Converters"
    xmlns:viewModels="using:StrixMusic.Sdk.ViewModels"
    x:Class="StrixMusic.Shells.ZuneDesktop.Styles.Items.ArtistItemStyle">

    <Style x:Key="ZuneDesktopArtistItemStyle" TargetType="items:ArtistItem">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="items:ArtistItem">
                        <Grid Background="Transparent" Margin="-24,0" Padding="24,0">
                            <Grid.Resources>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" x:Key="ArtistItemTextFadeBrush">
                                    <GradientStop Offset="0.7" Color="#000000" />
                                    <GradientStop Offset="1.1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Grid.Resources>
                            <TextBlock Text="{Binding Artist.Name, RelativeSource={RelativeSource Mode=TemplatedParent}}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource ArtistItemTextFadeBrush}" Opacity=".8"
                                       VerticalAlignment="Center" TextTrimming="Clip"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource ZuneDesktopArtistItemStyle}" TargetType="items:ArtistItem"/>

</ResourceDictionary>