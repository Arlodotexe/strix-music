<UserControl
    x:Class="LaunchPad.AbstractUI.Controls.AbstractUIGroupListPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstractUI="using:OwlCore.AbstractUI.Models"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ListView ItemsSource="{x:Bind ViewModel, Mode=OneWay}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="abstractUI:AbstractUIElementGroup">

                <StackPanel Spacing="5" Margin="10">

                    <TextBlock Text="{x:Bind Title}" FontSize="30" ToolTipService.ToolTip="{x:Bind TooltipText}" />

                    <TextBlock Text="{x:Bind Subtitle}"  FontSize="16" FontWeight="SemiLight" Opacity="0.75" />

                    <ListView ItemsSource="{x:Bind Items}"
                              ItemTemplateSelector="{Binding TemplateSelector, RelativeSource={RelativeSource Mode=TemplatedParent}}" />

                </StackPanel>

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</UserControl>