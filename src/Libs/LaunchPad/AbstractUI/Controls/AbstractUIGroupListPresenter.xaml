<UserControl
    x:Class="LaunchPad.AbstractUI.Controls.AbstractUIGroupListPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:abstractUI="using:LaunchPad.AbstractUI.ViewModels">

    <ListView ItemsSource="{x:Bind ViewModel, Mode=OneWay}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="abstractUI:AbstractUIElementGroupViewModel">

                <StackPanel Spacing="5" Margin="10">

                    <TextBlock Text="{x:Bind Title}" FontSize="30" ToolTipService.ToolTip="{x:Bind TooltipText}" />

                    <TextBlock Text="{x:Bind Subtitle}"  FontSize="16" FontWeight="SemiLight" Opacity="0.75" />

                    <ListView ItemsSource="{x:Bind Items}"
                              ItemTemplateSelector="{x:Bind TemplateSelector}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="5"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>

                </StackPanel>

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</UserControl>