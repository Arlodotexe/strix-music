<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="OwlCore.Uno.AbstractUI.Themes.AbstractDataListStyle"
    xmlns:abstractUI="using:OwlCore.Uno.AbstractUI.ViewModels"
    xmlns:convertvis="using:OwlCore.Uno.Converters.Bools.Visible"
    xmlns:controls="using:OwlCore.Uno.AbstractUI.Controls"
    xmlns:themes="using:OwlCore.Uno.AbstractUI.Themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///OwlCore.Uno/AbstractUI/Themes/AbstractUIResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="controls:AbstractDataListPresenter">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:AbstractDataListPresenter">
                        <ContentControl ContentTemplate="{StaticResource DefaultAbstractDataListTemplate}"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <DataTemplate x:Key="DefaultAbstractDataListTemplate" x:DataType="abstractUI:AbstractDataListViewModel">
        <StackPanel>
            <TextBlock Text="{x:Bind Title}" FontSize="{StaticResource DefaultAbstractUITitleFontSize}" ToolTipService.ToolTip="{x:Bind TooltipText}" />

            <TextBlock Text="{x:Bind Subtitle}" FontSize="{StaticResource DefaultAbstractUISubtitleFontSize}"
                       FontWeight="{StaticResource DefaultAbstractUISubtitleFontWeight}"
                       Opacity="{StaticResource DefaultAbstractUISubtitleOpacity}"
                       Visibility="{x:Bind convertvis:NotNullOrEmptyToVisibilityConverter.Convert(Subtitle)}"/>

            <ListView x:Name="PrimaryListView" Visibility="{x:Bind IsDisplayMode('List')}"  ItemsSource="{x:Bind Items}" SelectionMode="None" Margin="10">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ListViewItemPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="abstractUI:AbstractUIMetadataViewModel">
                        <Grid ToolTipService.ToolTip="{x:Bind TooltipText}" Height="60">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.RowSpan="2" Margin="0,0,5,0"
                                    Height="60" Width="60">
                                <FontIcon Glyph="{x:Bind IconCode}" FontFamily="Segoe MDL2 Assets" FontSize="34" />
                            </Border>

                            <Image Grid.RowSpan="2" Margin="0,0,5,0"
                                   x:Name="Thumbnail"
                                   Height="60" Width="60"
                                   Source="{x:Bind ImageSource, Mode=OneWay}" />

                            <TextBlock Grid.Column="1" Text="{x:Bind Title}" FontSize="22" VerticalAlignment="Center"
                                       Visibility="{x:Bind convertvis:NotNullOrEmptyToVisibilityConverter.Convert(Title)}"/>

                            <TextBlock x:Name="SubtitleTextBlock" Grid.Column="1" Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Visibility="{x:Bind convertvis:NotNullOrEmptyToVisibilityConverter.Convert(Subtitle)}"
                                       Text="{x:Bind Subtitle}"
                                       FontSize="16" FontWeight="SemiLight" Opacity="0.75" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <GridView SelectionMode="None" ItemsSource="{x:Bind Items}" Visibility="{x:Bind IsDisplayMode('Grid')}">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <Grid x:Name="ContentBorder">
                                        <ContentPresenter x:Name="ContentPresenter" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="abstractUI:AbstractUIMetadataViewModel">
                        <Grid ToolTipService.ToolTip="{x:Bind TooltipText}" Width="150" Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid BorderBrush="White" BorderThickness="1" Height="150" Width="150">
                                <FontIcon Glyph="{x:Bind IconCode}" FontFamily="Segoe MDL2 Assets" FontSize="34" />
                                <Image Source="{x:Bind ImageSource, Mode=OneWay}" />
                            </Grid>

                            <TextBlock Text="{x:Bind Title}" FontSize="18" Grid.Row="1" />

                            <TextBlock x:Name="SubtitleTextBlock" Grid.Row="2"
                                       Text="{x:Bind Subtitle}"
                                       FontSize="14" FontWeight="SemiLight" Opacity="0.5" />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>