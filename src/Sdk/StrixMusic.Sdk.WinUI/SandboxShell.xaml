<controls:Shell
	x:Class="StrixMusic.Sdk.WinUI.SandboxShell"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:StrixMusic.Sdk.WinUI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>

		<NavigationView x:Name="NavView" ItemInvoked="NavView_ItemInvoked">
			<NavigationView.AutoSuggestBox>
				<AutoSuggestBox x:Name="AutoSuggest" QuerySubmitted="AutoSuggestBox_QuerySubmitted" />
			</NavigationView.AutoSuggestBox>
			<NavigationView.MenuItems>
				<NavigationViewItem
					x:Name="HomeItem"
					x:Uid="/Common/HomeNVI"
					Content="Home">
					<NavigationViewItem.Icon>
						<FontIcon FontFamily="ms-appx://StrixMusic.Sdk.WinUI/Assets/SegoeMDL2.ttf#Segoe MDL2 Assets" Glyph="&#xE10F;" />
					</NavigationViewItem.Icon>
				</NavigationViewItem>
				<NavigationViewItem
					x:Uid="/Music/RecentPlayedNVI"
					Content="Recently Played"
					Tag="RecentlyPlayedItem">
					<NavigationViewItem.Icon>
						<!--<SymbolIcon Symbol="Clock"/>-->
						<FontIcon FontFamily="ms-appx://StrixMusic.Sdk.WinUI/Assets/SegoeMDL2.ttf#Segoe MDL2 Assets" Glyph="&#xE2AD;" />
					</NavigationViewItem.Icon>
				</NavigationViewItem>
				<NavigationViewItem
					x:Name="NowPlayingItem"
					x:Uid="/Music/NowPlayingNVI"
					Content="Now Playing">
					<NavigationViewItem.Icon>
						<FontIcon FontFamily="ms-appx://StrixMusic.Sdk.WinUI/Assets/SegoeMDL2.ttf#Segoe MDL2 Assets" Glyph="&#xF61F;" />
					</NavigationViewItem.Icon>
				</NavigationViewItem>
				<NavigationViewItemSeparator />
				<NavigationViewItem x:Uid="/Music/PlaylistsNVI" Content="Playlists">
					<NavigationViewItem.Icon>
						<FontIcon FontFamily="ms-appx://StrixMusic.Sdk.WinUI/Assets/SegoeMDL2.ttf#Segoe MDL2 Assets" Glyph="&#xE142;" />
					</NavigationViewItem.Icon>
				</NavigationViewItem>
				<NavigationViewItem x:Uid="/Music/CreatePlaylistNVI" Content="Create Playlist">
					<NavigationViewItem.Icon>
						<!--<SymbolIcon Symbol="Add"/>-->
						<FontIcon
							FontFamily="ms-appx://StrixMusic.Sdk.WinUI/Assets/SegoeMDL2.ttf#Segoe MDL2 Assets"
							FontSize="16"
							Glyph="&#xE710;" />
					</NavigationViewItem.Icon>
				</NavigationViewItem>
			</NavigationView.MenuItems>
			<ContentControl
				x:Name="MainContent"
				HorizontalContentAlignment="Stretch"
				DataContext="{x:Bind RootVm}" />
		</NavigationView>

		<controls:NowPlayingBar Grid.Row="1" Devices="{x:Bind RootVm.Devices, Mode=OneWay}" />

		<ContentControl
			x:Name="OverlayContent"
			Grid.RowSpan="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			HorizontalContentAlignment="Stretch"
			VerticalContentAlignment="Stretch"
			Visibility="Collapsed" />
	</Grid>
</controls:Shell>
