<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:abstractui="using:LaunchPad.AbstractUI.Themes"
    xmlns:defaultcontrols="using:StrixMusic.Sdk.Uno.Controls"
    xmlns:converters="using:StrixMusic.Sdk.Uno.Converters"
    xmlns:styles="using:StrixMusic.Sdk.Uno.Styles"
    xmlns:launchpad="using:LaunchPad.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/NowPlayingBarStyle.xaml"/>
        <styles:AlbumCollectionStyle/>
        <styles:AlbumItemStyle/>
        <styles:AlbumViewStyle/>
        <styles:ArtistCollectionStyle/>
        <styles:ArtistItemStyle/>
        <styles:ArtistViewStyle/>
        <styles:HomeViewStyle/>
        <styles:NotificationAbstractUIGroupStyle/>
        <styles:NowPlayingViewStyle/>
        <styles:PlayableCollectionGroupPivotStyle />
        <styles:PlaylistCollectionStyle/>
        <styles:PlaylistItemStyle/>
        <styles:PlaylistViewStyle/>
        <styles:SafeImageStyle/>
        <styles:SearchViewStyle/>
        <styles:SettingsViewStyle/>
        <styles:TrackCollectionStyle/>
        <styles:TrackItemStyle/>
        <abstractui:AbstractUIGroupPresenterStyle/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MediaButton" TargetType="Button">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="MediaToggleContentButton" TargetType="launchpad:ToggleContentButton">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="PlayableCollectionGridItemStyle" TargetType="GridViewItem">
        <Setter Property="Margin" Value="8,12"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
    </Style>

    <Style x:Key="TrackListItemStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>
