<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:StrixMusic.Sdk.Uno.Controls.Views"
    xmlns:viewModels="using:StrixMusic.Sdk.ViewModels"
    xmlns:base="using:StrixMusic.Sdk.Data.Base"
    xmlns:sdktemplsel="using:StrixMusic.Sdk.Uno.TemplateSelectors"
    x:Class="StrixMusic.Sdk.Uno.Styles.Views.SettingsViewStyle">

    <sdktemplsel:CollectionSelector x:Key="CollectionSelector"/>

    <DataTemplate x:Key="DefaultSettingsViewTemplate" x:DataType="viewModels:LibraryViewModel">
        <UserControl>
            <Grid>
                <Pivot ItemsSource="{x:Bind Children, Mode=OneWay}" ItemTemplateSelector="{StaticResource CollectionSelector}">
                    <Pivot.Title>
                        <TextBlock Text="Settings"/>
                    </Pivot.Title>
                    <Pivot.HeaderTemplate>
                        <DataTemplate x:DataType="base:IPlayableBase">
                            <TextBlock Text="{x:Bind Name}"/>
                        </DataTemplate>
                    </Pivot.HeaderTemplate>
                </Pivot>
            </Grid>
        </UserControl>
    </DataTemplate>

    <Style x:Key="DefaultSettingsViewStyle" TargetType="views:SettingsView">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="views:SettingsView">
                        <ContentControl ContentTemplate="{StaticResource DefaultSettingsViewTemplate}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultSettingsViewStyle}" TargetType="views:SettingsView"/>

</ResourceDictionary>