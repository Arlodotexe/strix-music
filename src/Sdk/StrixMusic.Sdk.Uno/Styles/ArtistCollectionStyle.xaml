<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:defaultcontrols="using:StrixMusic.Sdk.Uno.Controls"
    xmlns:viewModels="clr-namespace:StrixMusic.Sdk.ViewModels;assembly=StrixMusic.Sdk"
    x:Class="StrixMusic.Sdk.Uno.Styles.ArtistCollectionStyle">

    <DataTemplate x:Key="DefaultArtistCollectionDataTemplate" x:DataType="viewModels:IArtistCollectionViewModel">
        <GridView x:Name="PART_Selector" ItemsSource="{x:Bind Artists}" ItemTemplate="{StaticResource DefaultArtistCollectionItemStyle}"
                  Padding="16" HorizontalAlignment="Stretch" SelectionMode="None" IsItemClickEnabled="True"
                  ItemClick="OpenArtist"/>
    </DataTemplate>

    <DataTemplate x:Key="DefaultArtistCollectionItemStyle">
        <defaultcontrols:ArtistItem />
    </DataTemplate>

    <Style x:Key="DefaultArtistCollectionStyle" TargetType="defaultcontrols:ArtistCollection">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="defaultcontrols:ArtistCollection">
						<ContentControl ContentTemplate="{StaticResource DefaultArtistCollectionDataTemplate}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource DefaultArtistCollectionStyle}" TargetType="defaultcontrols:ArtistCollection"/>

</ResourceDictionary>