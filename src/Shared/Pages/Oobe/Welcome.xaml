<Page
	x:Class="StrixMusic.Pages.Oobe.Welcome"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:StrixMusic.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:StrixMusic.Pages.Oobe"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Background="{ThemeResource OobePageBackgroundColor}"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1.5*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="0.5*" />
		</Grid.RowDefinitions>

		<controls:StrixIcon Height="150" IsAnimated="True" />

		<ProgressBar
			Grid.Row="1"
			Foreground="#FFAD44E1"
			IsEnabled="True"
			IsIndeterminate="True" />

		<Border Grid.Row="2" />
	</Grid>

</Page>
