<UserControl
    x:Class="StrixMusic.Controls.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrixMusic.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:services="using:StrixMusic.Services"
    xmlns:converters="using:StrixMusic.Converters"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:componentModel="using:OwlCore.ComponentModel"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <converters:FrameworkElementToTagConverter x:Key="FrameworkElementToTagConverter"/>
    </UserControl.Resources>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PartNavigationView.PaneDisplayMode" Value="Top" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{Binding ElementName=PartNavigationView, Path=CompactModeThresholdWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PartNavigationView.PaneDisplayMode" Value="Auto" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ContentControl Content="{x:Bind AppRoot.StrixDataRoot, Mode=OneWay}" x:Name="AppRootHolder" Visibility="Collapsed" />

        <local:StrixIcon ShowText="True" Margin="10" MaxWidth="300" IsAnimated="True" />

        <muxc:NavigationView Grid.Row="1" x:Name="PartNavigationView"
                             IsBackButtonVisible="Collapsed" IsSettingsVisible="False"
                             PaneDisplayMode="Auto"
                             OpenPaneLength="275"
                             SelectedItem="{Binding ElementName=AppearanceNavigationViewItem, Mode=OneTime}">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Icon="{ui:FontIcon Glyph=&#xE713;}" Content="General" Tag="{x:Bind AppRoot.Settings, Mode=OneWay}" />
                <muxc:NavigationViewItem Icon="{ui:FontIcon Glyph=&#xE2B1;}" Content="Appearance" Tag="{x:Bind AppRoot.ShellSettings, Mode=OneWay}" x:Name="AppearanceNavigationViewItem" />
                <muxc:NavigationViewItem Icon="{ui:FontIcon Glyph=&#xEA69;}" Content="Music sources" Tag="{x:Bind AppRoot.Settings, Mode=OneWay}" />
                <muxc:NavigationViewItem Icon="{ui:BitmapIcon Source=/Assets/Strix/ipfs-logo.png}" Content="IPFS" Tag="{x:Bind AppRoot.Settings, Mode=OneWay}" />
                <muxc:NavigationViewItem Icon="{ui:FontIcon Glyph=&#xEE57;}" Content="About" Tag="{x:Bind AppRoot.Settings, Mode=OneWay}" />
                <muxc:NavigationViewItem Icon="{ui:FontIcon Glyph=&#xEBE8;}" Content="Debug" Tag="{x:Bind AppRoot.Settings, Mode=OneWay}" />
            </muxc:NavigationView.MenuItems>

            <ScrollViewer>
                <ContentControl Content="{x:Bind PartNavigationView.SelectedItem, Mode=OneWay, Converter={StaticResource FrameworkElementToTagConverter}}"
                                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <ContentControl.ContentTemplateSelector>
                        <local:SettingsTemplateSelector>
                            <local:SettingsTemplateSelector.ShellSettingsTemplate>
                                <DataTemplate x:DataType="services:ShellSettings">
                                    <local:ShellSettingsEditor ShellSettings="{x:Bind}" Root="{Binding ElementName=AppRootHolder, Path=Content, Mode=OneWay}" Margin="5" />
                                </DataTemplate>
                            </local:SettingsTemplateSelector.ShellSettingsTemplate>

                            <local:SettingsTemplateSelector.FallbackTemplate>
                                <DataTemplate x:DataType="componentModel:SettingsBase">
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE822;" FontSize="28"/>
                                </DataTemplate>
                            </local:SettingsTemplateSelector.FallbackTemplate>
                        </local:SettingsTemplateSelector>
                    </ContentControl.ContentTemplateSelector>
                </ContentControl>
            </ScrollViewer>
        </muxc:NavigationView>
    </Grid>
</UserControl>
