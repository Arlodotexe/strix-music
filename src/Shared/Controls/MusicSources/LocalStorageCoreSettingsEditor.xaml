        <Grid RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border>
                <Image Source="ms-appx:///Assets/Cores/LocalStorage/browse.svg" MaxWidth="300"/>
            </Border>

            <StackPanel Grid.Row="1">
                <TextBlock FontSize="18"
                           Text="Add local audio files" HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           TextAlignment="Center"/>

                <TextBlock FontSize="12" Opacity="0.5"
                       Text="Select a folder containing audio files and playlists" HorizontalAlignment="Center"
                       TextWrapping="WrapWholeWords"
