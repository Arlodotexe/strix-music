<Application
	x:Class="StrixMusic.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
				<ResourceDictionary Source="ms-appx:///StrixMusic.Sdk.WinUI/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Color x:Key="ShadowColor">#FF000000</Color>
			<x:Double x:Key="ShadowOpacity">0.1</x:Double>

			<SolidColorBrush x:Key="OobePageBackgroundColor" Color="#1E1E23" />
		</ResourceDictionary>
	</Application.Resources>
</Application>
